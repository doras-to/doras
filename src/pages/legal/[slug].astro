---
export async function getStaticPaths() {
    const posts = await Astro.glob("./src/content/legal/*.mdx");

    return posts.map((post) => ({
        params: {
            slug: post.frontmatter.slug
        },
        props: {
            post
        }
    }));
}

const { Content } = Astro.props.post;
---

<article>
    <Content />
</article>
