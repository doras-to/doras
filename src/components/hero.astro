---
import { Image } from "astro:assets";
import heroImage from "../assets/Doras-White-Small.png";
import Link from "@/components/ui/link.astro";
import Container from "@/components/container.astro";
import { BouncyCardsFeatures } from "@/components/BounceFeatures";
import { motion } from "framer-motion";

const primaryVariants = {
    initial: {
        y: 25,
        opacity: 0
    },
    animate: {
        y: 0,
        opacity: 1
    }
};
---

<div class="overflow-x-clip">
    <Container>
        <main>
            <motion.div
                initial="initial"
                whileInView="animate"
                transition={{
                    staggerChildren: 0.1
                }}
                viewport={{ once: true }}
                className="grid gap-3"
            >
                <div class="mx-auto w-full rounded-xl bg-surface-50 p-4 shadow-xl">
                    <motion.div variants={primaryVariants}>
                        <h1 class="scroll-m-20 text-5xl font-extrabold tracking-tight text-surface-900 md:text-7xl">
                            <span class="text-primary-500">Doras</span>
                             Builds Creators
                        </h1>
                    </motion.div>
                    <motion.div variants={primaryVariants}>
                        <h1 class="p-2 text-2xl font-extrabold tracking-tight text-primary-600">Designed for the dreamers and the doers</h1>
                    </motion.div>
                </div>
                <motion.div className="" variants={primaryVariants}>
                    <BouncyCardsFeatures client:only />
                </motion.div>
                <!-- <motion.div variants={primaryVariants} className="w-full h-full flex justify-center items-center">
                    <PhoneAnimation client:only />
                </motion.div> -->
            </motion.div>
        </main>
    </Container>
</div>
